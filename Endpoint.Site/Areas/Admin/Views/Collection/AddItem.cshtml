
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<string>
@{
    ViewData["Title"] = "AddItem";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

@{
    List<string> dataitm = new List<string>();
    List<string> itemname = new List<string>();
    string nameitm = "";

}

<section class="basic-elements">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="content-header"> اضافه کردن رکورد جدید</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title mb-0" style="text-align:center">اطلاعات رکورد را وارد نمایید</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <div>
                            <div>
                                <div class="row">
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput" class="form-control ql-size-large" id="tablenam">  @ViewBag.tablenamit  </label>
                                        </fieldset>
                                    </div>

                                    @foreach (var it in Model)
                                    {
                                        @if (@it == "InsertTime" ||
                                            @it == "UpdateTime" ||
                                            @it == "IsRemoved" ||
                                            @it == "RemoveTime" ||
                                            @it == "id")
                                        {
                                        }
                                        else
                                        {

                                            <div class="field full" data-v-a6970e8e="" data-v-4c7821e7="">
                                                <div class="v-menu" data-v-1f453762="" data-v-a6970e8e="">
                                                    <div class="v-menu-activator" data-v-1f453762="">
                                                        <div class="label type-label" data-v-268044f0="" data-v-a6970e8e="">
                                                            <span data-v-268044f0="" data-tooltip="v0o83JPG8bXjjAoxNvTXN">
                                                                @it
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="interface" data-v-43a8ae08="" data-v-a6970e8e="">
                                                    <div class="v-input full-width sans-serif" data-v-71ccfd30="" data-v-e06c0060="" data-v-43a8ae08="">
                                                        <div class="input" data-v-71ccfd30="">
                                                            <input loading="false" width="0" collection=@ViewBag.tablenamit field=@it primary-key="+" autocomplete="off" type="text" step="1" data-v-71ccfd30="" id=@it>
                                                            @{
                                                                itemname.Add(it); //dataitm.Add(nameitm);
                                                            }

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="v-dialog" data-v-76480f74="" data-v-a6970e8e="">
                                                </div>
                                            </div>

                                        }


                                    }



                                    <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                        <br />
                                        <a class="btn btn-success col-md-12 "  onclick="Insertrecord()" id="inset">اتمام</button>
                                     </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>


@section Scripts
{

    <script src="~/Sweetalert2/sweetalert2.min.js"></script>
    <link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />


    <script>

    function Insertrecord( ) {
            swal.fire({
                title: 'اضافه کردن رکورد',
                text: "آیا میخواهید رکورد را انجام دهید؟",
                icon: 'info',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'بله اضافه کردن رکورد انجام شود',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.value) {
                    var postData = JSON.parse("{}");
                    @{
                        int itm = 0;
                        }
                    for (var m in @itemname) {
                        postData.push({@itemname[@itm] : document.getElementById("#@itemname[@itm]") });
                        @itm = @itm + 1;
                    }
                    $.ajax(
                        {
                                contentType: 'application/x-www-form-urlencoded',
                            dataType: 'json',
                            type: "POST",
                            url: "AddItem",
                            data: postData,
                            success: function (data) {
                                        if (data.isSuccess == true)
                                        {
                                            swal.fire(
                                                'موفق!',
                                                data.message,
                                                'success'
                                            ).then(function (isConfirm) {
                                                location.reload();
                                                location.href = 'GetItems';
                                            });
                                        }
                                        else
                                        {
                                            swal.fire(
                                                'هشدار!',
                                                data.message,
                                                'warning'
                                            );
                                        }
                                    },
                            error: function (request, status, error) {
                                        alert(request.responseText);
                                    }
                                });
                }
                        })
    }
    </script>
}
