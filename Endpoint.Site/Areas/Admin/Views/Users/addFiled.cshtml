@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model CmsRebin.Domain.Entities.Commons.ModelContainer

@{
    ViewData["Title"] = "addFiles";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<section class="basic-elements">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="content-header"> اضافه کردن فیلد جدید</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title mb-0" style="text-align:center">اطلاعات فیلد را وارد نمایید</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <div class="form">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput" class="form-control ql-size-large" id="tablenam">  @ViewBag.tablenam  </label>
                                         </fieldset>
                                    </div>
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput">نام </label>
                                            <input type="text" class="form-control" id="name" placeholder="نام" />
                                        </fieldset>
                                    </div>

                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            @Html.DropDownList("filed", new SelectList(@ViewBag.typefile, "id", "typefield"), "-", new { @class = "form-control", @id = "typeofField" })
                                        </fieldset>
                                    </div>
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            @Html.DropDownList("Relation", new SelectList(@ViewBag.typerelation, "id", "typerelation"), "-", new { @class = "form-control", @id = "relationsofTables" })
                                        </fieldset>
                                    </div>
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            @*<label for="basicInput">جدول دوم </label>*@

                                            @*@Html.DropDownList("Tables", new SelectList(@ViewBag.listTabl, "id", "collection"), "-", new { @class = "form-control", @id = "table2" })*@

                                            @Html.DropDownList("Tables", new SelectList(@ViewBag.listTabl, "collection"), "-", new { @class = "form-control", @id = "table2" })
                                        </fieldset>
                                    </div>



                                        <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                            <fieldset class="form-group">
                                                <label for="basicInput">فیلد مقصد برای ارتباط </label>abel>
                                                <input type="text" class="form-control" id="forignkey" placeholder="فیلد مقصد برای ارتباط" />
                                            </fieldset>
                                        </div>

                                        <div>
                                            <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                                <fieldset class="form-group">
                                                    <label for="singlton" style="color:#000000;font-size:15px"> یونیک </label>
                                                    <input type="checkbox" id="Uniqe">
                                                </fieldset>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                                <fieldset class="form-group">
                                                    <label for="singlton" style="color:#000000;font-size:15px"> نال پذیر </label>
                                                    <input type="checkbox" id="Nullable">
                                                </fieldset>
                                            </div>
                                        </div>

                                        <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                            <fieldset class="form-group">
                                                <br />
                                                <a onclick="InsertField()" class="btn btn-success col-md-12 ">اتمام  </a>
                                            </fieldset>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>


@section Scripts
{

    <script src="~/Sweetalert2/sweetalert2.min.js"></script>
    <link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />

    <script>
        function InsertField() {
            swal.fire({
                title: 'اضافه کردن فیلد',
                text: "آیا میخواهید فیلد را انجام دهید؟",
                icon: 'info',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'بله اضافه کردن فیلد انجام شود',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.value) {

                    var tablename = $.trim( $("#tablenam").text());
                    var name = $.trim( $("#name").val());
                    var type = $.trim($("#typeofField :selected").text());
                    var rel = $.trim( $("#relationsofTables :selected").text());
                    var nullable = $("#Nullable").val();
                    var uniqe = $("#Uniqe").val();
                    var table2 = $.trim($("#table2 :selected").text());
                    var forignkey = $.trim($("#forignkey").val());
                    var postData = {
                        "Tname": tablename,
                        "name": name,
                        "type": type,
                        "rel": rel,
                        "nullable": nullable,
                        "uniqe": uniqe,
                        "table2": table2,
                        "forignkey": forignkey,
                    };

                    $.ajax(
                        {
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "POST",
                         url: "addFiled",
                        data: postData,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                      location.reload();
                                    //location.href = 'addFiled';
                                    location.href = 'GetFileds';
                                });
                            }
                            else {

                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );

                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }

                        });

                }
            })



        }
    </script>
}
