@using CmsRebin.Application.Service.Collection.Commands.PostTable
@model ReslutPostTableDto;
@{
    ViewData["Title"] = "Models";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}



<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Zero configuration table -->
        <section id="configuration">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="card-title-wrap bar-success ">
                                        <h4 class="card-title"> جداول</h4>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <button class="btn btn-success" onclick="location.href='creatTable'"> + </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body collapse show">
