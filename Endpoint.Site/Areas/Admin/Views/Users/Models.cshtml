                                                        <td class="sorting_1">@item.collection</td>
                                                        <td>@item.note</td>
                                                        <td>
                                                            <button class="btn btn-info" onclick="ShowModalEditTable('@item.Id', '@item.collection', '@item.note')">ویرایش</button>
                                                            <button class="btn btn-danger" onclick="DeleteTable('@item.Id')"> حذف </button>
                                                            <button class="btn btn-danger" onclick="Getf('@item.Id', '@item.collection')"> + </button>
                                                           
