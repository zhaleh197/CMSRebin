<script>
    function MyEdit(id) {
        $.ajax({
            url: "/Home/Show/" + id,
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModall').modal('show');
            $('#bodyModall').html(result);
        })
    }
    function DeleteDB(DBid) {
        //alert("mjhjmjmjfmjf");
        swal.fire({
            title: 'حذف دیتابیس',
            text: "کاربر گرامی از حذف دیتابیس مطمئن هستید؟",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#7cacbe',
            confirmButtonText: 'بله ، دیتابیس حذف شود',
            cancelButtonText: 'خیر'
        }).then((result) => {
            if (result.value) {
                var postData = {
                    'DBid': DBid,
                };

                $.ajax({
                    contentType: 'application/x-www-form-urlencoded',
                    dataType: 'json',
                    type: "POST",
                    url: "/DB/Delete",
                    data: postData,
                    success: function (data) {
                        if (data.isSuccess == true) {
                            swal.fire(
                                'موفق!',
                                data.message,
                                'success'
                            ).then(function (isConfirm) {
                                location.reload();
                            });
                        }
                        else {

                            swal.fire(
                                'هشدار!',
                                data.message,
                                'warning'
                            );

                        }
                    },
                    error: function (request, status, error) {
                        alert(request.responseText);
                    }

                });

            }
        })
    }
    function Downloaddb(id) {
        //alert("mjhjmjmjfmjf");
        swal.fire({
            title: 'دانلود دیتابیس',
            text: " دانلود شود؟",
            icon: 'success',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#7cacbe',
            confirmButtonText: 'بله ،',
            cancelButtonText: 'خیر'
        }).then((result) => {
            if (result.value) {
                var postData = {
                    'id': id,
                };

                $.ajax({
                    contentType: 'application/x-www-form-urlencoded',
                    dataType: 'json',
                    type: "Get",
                    url: "/DB/DownloadBD/" + id,
                    //data: postData,
                    success: function (data) {
                        if (data.isSuccess == true) {
                            swal.fire(
                                'موفق!',
                                data.message,
                                'success'
                            ).then(function (isConfirm) {
                                location.href = "https://192.168.1.1:8000/E:\\DatabaseBackup\\" + DateTime.Now.ToString("ddMMyyyy") + ".Bak";
                               
                            });
                        }
                        else {

                            swal.fire(
                                'هشدار!',
                                data.message,
                                'warning'
                            );

                        }
                    },
                    error: function (request, status, error) {
                        alert(request.responseText);
                    }

                });

            }
        })
    }
</script>
